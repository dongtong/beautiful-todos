// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum TodoStatus {
  New
  Completed
}

model Todo {
  id            String     @id @default(cuid())
  title         String     @db.Char(255)
  status        TodoStatus
  createdAt     String
  lastUpdatedAt String
  completedAt   String?
  creator       String?
}
